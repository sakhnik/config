#!/bin/bash

set -e

die() {
	echo >&2 "ERROR:" $@
	exit 1
}

[[ -e .cproj ]] && die ".cproj already exists"

mkdir -p .cproj

cat >.cproj/files <<END
# White list of files to scan:
#  <directory>    <regex>
.		\.(cc|cpp|cxx)$
END

cat >.cproj/cflags <<END
# List of additional compiler options
-std=c++14
END

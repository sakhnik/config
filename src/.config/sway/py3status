order += "battery_level"
battery_level {
    format = 'BAT: {percent}%'
    notification = True
}

order += "sysdata"
sysdata {
    format = "CPU {format_cpu}"
    format_cpu = "[\?color=cpu_used_percent \?min_length=3 [\?color=used_percent {used_percent:.0f}%]]"
    cache_timeout = 2
}

order += "clock"
clock {
   format = "{Local}"
   format_time = "%a %-d %b %H:%M:%S"
}
